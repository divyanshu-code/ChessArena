<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <style>
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            /*  Prevent scroll */
        }

        .chessBoard {
            display: grid;
            grid-template-columns: repeat(8, minmax(0, 1fr));
            grid-template-rows: repeat(8, minmax(0, 1fr));
            width: 400px;
            height: 400px;
            transform: rotate(0deg);
        }

        .piece.white {
            color: white;
            filter: drop-shadow(0 0 1px rgba(0, 0, 0, 1));
        }

        .piece.black {
            color: black;
            filter: drop-shadow(0 0 2px rgba(255, 255, 255, 1));
        }

        .flipped {
            transform: rotate(180deg);
        }

        .square {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .square.light {
            background-color: #F0D9B5;
        }

        .square.dark {
            background-color: #B58863;
        }

        .piece {
            font-size: 36px;
            cursor: pointer;
        }

        .piece.draggable {
            cursor: grab;
        }

        .dragging {
            opacity: 0.5;
        }

        /* Rotate pieces for black player */
        .flipped .piece {
            transform: rotate(180deg);
        }

        #welcome-screen {

            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-weight: lighter;
            font-size: 1.25rem;
            color: #ffffff;
        }

        #chess-container {

            opacity: 0;
            transition: opacity 1.5s ease-in-out;

        }

        #chess-container.visible {
            visibility: visible;
            opacity: 1;
        }

        .dot-loader {
            display: inline-block;
            animation: dots 2s steps(3, end) infinite;
            overflow: hidden;
            vertical-align: bottom;
            width: 0;
        }

        @keyframes dots {
            0% {
                width: 0ch;
            }

            33% {
                width: 1ch;
            }

            66% {
                width: 2ch;
            }

            100% {
                width: 3ch;
            }
        }

        .chessBoard {
            width: 90vw;
            height: 90vw;
            max-width: 400px;
            max-height: 400px;
        }
    </style>

</head>

<body>


    <div class="w-full min-h-screen  bg-black">


        <div id="welcome-screen"> </div>



        <div id="chess-container">

            <div class="bg-white border-b-2 border-gray-700 shadow-2xl flex items-center justify-center w-full h-15">

                <img src="/Images/1.png" alt="ChessArena Logo" class="w-96 h-14 font-mono " />

            </div>

            <div class=" flex justify-center">


                <div class="chessBoard w-96 h-96 mt-30 ">

                </div>


            </div>

        </div>

    </div>



    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"
        integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"
        integrity="sha512-xRllwz2gdZciIB+AkEbeq+gVhX8VB8XsfqeFbUh+SzHlN96dEduwtTuVuc2u9EROlmW9+yhRlxjif66ORpsgVA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</body>

<script>

    const message = "Welcome to the ChessArena";
    const welcomeEl = document.getElementById("welcome-screen");

    let i = 0;

    const typewriter = () => {
        if (i < message.length) {
            welcomeEl.textContent += message.charAt(i);
            i++;
            setTimeout(typewriter, 100);
        } else {

            // After full message, show animated dots
            const dots = document.createElement("span");
            dots.classList.add("dot-loader");
            dots.textContent = "....";
            welcomeEl.appendChild(dots);
        }
    };

    typewriter();

    setTimeout(() => {
        document.getElementById("welcome-screen").style.display = "none";
        const board = document.getElementById("chess-container");
        board.classList.add("visible");


        // Now load game.js
        const script = document.createElement("script");
        script.src = "/JS/game.js";
        document.body.appendChild(script);
    }, 8000);               
</script>

<!-- remember do not use public while adding script file from public  -->

</html>